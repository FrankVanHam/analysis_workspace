_pragma(classify_level=basic, topic={analysis})
##
## Test using geometry filters.
def_slotted_exemplar(:follow_join_tc,
	{},
	:base_analysis_test_case)
$

_pragma(classify_level=basic, topic={analysis})
_method follow_join_tc.test_on_sw_col()
	_local dsm << rwan:analysis_dataset_manager.new(:test)
	_local hcol << rwan:sw_collection.new(dsm, _self.min_road_collection)
	_local wcol << hcol.follow_join(:walks)
	_self.assert_is(wcol.size, 2, "There are only 2 walks connected to the roads")
_endmethod
$

_pragma(classify_level=basic, topic={analysis})
_method follow_join_tc.test_follow_x_to_0_join()
	_local dsm << rwan:analysis_dataset_manager.new(:test)
	_local pcol << rwan:sw_collection.new(dsm, _self.supply_point_collection)
	_local acol << pcol.follow_join(:customer)
	
	_self.assert_is(acol.size, 24, "There should be x customers in the set")
_endmethod
$

