#remex(:follow_method_col_test_case)

_pragma(classify_level=basic, topic={analysis})
##
## Test distance filters.
##
def_slotted_exemplar(:follow_method_col_test_case,
	{},
	:base_analysis_db_test_case)
$

_pragma(classify_level=basic, topic={analysis})
_method follow_method_col_test_case.test_exposure()
	_local dsm << rwan:analysis_dataset_manager.new(:test)
	
	_local road_col << rwan:sw_collection.new(dsm, _self.min_road_collection)
	_local j_col << road_col.follow_method(:hotel_10)
	
	_self.assert_equals( _self.hotel_collection, j_col.expose(), "the core collection has moved to hotels")
	
	_local area_col << _self.area_collection(dsm, {0,0,100,0,100,100,0,100,0,0})
	_local filter_col << j_col.filter_by_distance(:location, length_value(10,:m), _false, area_col, :geometry)
	
	_self.assert_equals( _self.hotel_collection, filter_col.expose(), "the core (2) collection is still the road collection")
_endmethod
$

_pragma(classify_level=basic, topic={analysis})
_method follow_method_col_test_case.test_basics()
	_local dsm << rwan:analysis_dataset_manager.new(:test)

	_local r1 << _self.create_road("access1", {0,0,10000,0})
	_local road_col << rwan:record_set_collection.new(dsm, {r1})
	_local j_col << road_col.follow_method(:hotel_10)

	_self.assert_equals(10, j_col.size, "There should be 10 hotels")
	
	_local r2 << _self.create_road("access2", {0,0,0,10000})
	
	road_col << rwan:record_set_collection.new(dsm, {r1, r2})
	j_col << road_col.follow_method(:hotel_10)
	_self.assert_equals(10, j_col.size, "There should be still 10 hotels")
_endmethod
$


_pragma(classify_level=basic, topic={analysis})
_method follow_method_col_test_case.test_geometry_set()
	_local dsm << rwan:analysis_dataset_manager.new(:test)
	
	_local r1 << _self.create_road("access1", {0,0,10000,0})
	
	_local road_col << rwan:record_set_collection.new(dsm, {r1})
	_local j_col << road_col.follow_method(:hotel_10)

	_local gs << j_col.geometry_set(:location)
	
	_self.assert_equals(10, gs.size, "10 hotel locations")
	_self.assert_not_unset(j_col.goto_bounds)
_endmethod
$
