_pragma(classify_level=basic, topic={analysis})
##
## Test using geometry filters.
def_slotted_exemplar(:follow_topology_tc,
	{},
	:base_analysis_test_case)
$

_pragma(classify_level=basic, topic={analysis})
_method follow_topology_tc.test_on_sw_col()
	_local dsm << rwan:analysis_dataset_manager.new(:test)
	_local rcol << rwan:sw_collection.new(dsm, _self.min_road_collection)
	_local hcol << rcol.follow_topology( :centre_line, _self.hotel_collection)
	_self.assert_equals( hcol.size, 15, "There should be 15 topological connected hotels (not #1)")
_endmethod
$

