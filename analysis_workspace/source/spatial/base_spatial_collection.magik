_pragma(classify_level=basic, topic={analysis})
##
## Base class of collections that store a collection of
## geometries.
##
def_slotted_exemplar(:base_spatial_collection,
	{},
	:base_collection)
$

_pragma(classify_level=basic, topic={analysis})
_method base_spatial_collection.geometry_refs
	>> {(geom_ref.new(:geometry,
			  _self.message(:geometry),
			  _self.geom_category,
			  _false))}
_endmethod
$


_pragma(classify_level=basic, topic={analysis})
_method base_spatial_collection.geom_category
	_return _self.an_element().geom_category
_endmethod
$

_pragma(classify_level=basic, topic={analysis})
_method base_spatial_collection.geometry_for(rec, geom_name)
	_return rec
_endmethod
$

_pragma(classify_level=basic, topic={analysis})
_method base_spatial_collection.goto_bounds
	_return _self.geometry_set(:geometry).bounds
_endmethod
$


