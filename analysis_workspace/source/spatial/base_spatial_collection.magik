_pragma(classify_level=basic, topic={analysis})
_method base_spatial_collection.buffer(source_geom_name, distance, corner_style, end_style)
	_return rwan:buffer_geometry_collection.new(.dsm, _self,
					       distance, corner_style, end_style)
_endmethod
$

_pragma(classify_level=basic, topic={analysis})
_method base_spatial_collection.filter_by_bounds(geom_name, bounds)
	_return rwan:bounds_filter_geometry_collection.new(.dsm, _self, bounds)
_endmethod
$

_pragma(classify_level=basic, topic={analysis})
_method base_spatial_collection.filter_by_geometry(geom_name, operator, filter_collection, filter_geometry)
	_return rwan:spatial_filter_geometry_collection.new(.dsm,
						       _self, operator,
						       filter_collection, filter_geometry)
_endmethod
$

_pragma(classify_level=basic, topic={analysis})
_method base_spatial_collection.filter_by_distance(geom_name, distance, inverse?, filter_collection, filter_geometry)
	_return rwan:distance_filter_geometry_collection.new(.dsm,
							_self, distance, inverse?,
							filter_collection, filter_geometry)
_endmethod
$

_pragma(classify_level=basic, topic={analysis})
_method base_spatial_collection.binary_op(operation, filter_collection)
	_return rwan:binary_op_geometry_collection.new(.dsm, _self, operation, filter_collection)
_endmethod
